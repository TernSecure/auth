{
  "name": "@tern-secure/auth",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TernSecure/typescript.git",
    "directory": "packages/auth"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "license": "ISC",
  "description": "Firebase authentication client ready to use functions",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup",
    "build:add": "tsc -p tsconfig.add.json",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "check-types": "pnpm exec tsc --noEmit"
  },
  "dependencies": {
    "@tern-secure/shared": "workspace:*",
    "@tern-secure/types": "workspace:*",
    "server-only": "^0.0.1",
    "tslib": "2.4.1"
  },
  "devDependencies": {
    "firebase": "^12.0.0",
    "jose": "^5.10.0",
    "next": "15.3.2"
  },
  "peerDependencies": {
    "firebase": "^11.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}