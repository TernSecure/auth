{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6", "DOM", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "resolveJsonModule": true,
    "preserveWatchOutput": true,
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules"]
}