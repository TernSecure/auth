{
  "name": "@tern-secure/shared",
  "version": "1.3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TernSecure/auth.git",
    "directory": "packages/shared"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup",
    "build:add": "tsc -p tsconfig.add.json",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "check-types": "pnpm exec tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "Pacifique Kamugisha",
  "license": "ISC",
  "description": "Shared types and utilities for TernSecure projects",
  "files": [
    "dist",
    "browser",
    "caseUtils",
    "cookie",
    "derivedAuthState",
    "errors-api",
    "errors",
    "eventBus",
    "event-emitter",
    "globs",
    "loadScript",
    "loadTernUIScript",
    "logger",
    "object",
    "pathMatcher",
    "pathToRegexp",
    "react",
    "resolveVersion",
    "retry",
    "serviceWorker",
    "ternStatusEvent",
    "url",
    "utils"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      },
      "require": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/index.d.mts",
        "default": "./dist/react/index.mjs"
      },
      "require": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react/index.js"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils/index.d.mts",
        "default": "./dist/utils/index.mjs"
      },
      "require": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "devDependencies": {
    "@types/glob-to-regexp": "0.4.4",
    "@types/js-cookie": "^3.0.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@tern-secure/types": "workspace:*",
    "glob-to-regexp": "0.4.1",
    "js-cookie": "^3.0.5",
    "tslib": "2.4.1"
  },
  "peerDependencies": {
    "react": "catalog:peer-react",
    "react-dom": "catalog:peer-react"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20"
  }
}
