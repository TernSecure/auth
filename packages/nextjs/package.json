{
  "name": "@tern-secure/nextjs",
  "version": "5.1.12",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TernSecure/auth.git",
    "directory": "packages/nextjs"
  },
  "bugs": {
    "url": "https://github.com/TernSecure/auth/issues"
  },
  "homepage": "https://github.com/TernSecure/auth#readme",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup",
    "build:add": "tsc -p tsconfig.add.json",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "bench": "vitest bench"
  },
  "keywords": [
    "firebase",
    "authentication",
    "nextjs",
    "auth",
    "typescript"
  ],
  "author": "Pacifique Kamugisha",
  "license": "MIT",
  "description": "Firebase authentication solution for Next.js applications",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "admin",
    "server"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./server": {
      "types": "./dist/types/server/index.d.ts",
      "import": "./dist/esm/server/index.js",
      "require": "./dist/cjs/server/index.js"
    },
    "./server/node": {
      "types": "./dist/types/server/node/index.d.ts",
      "import": "./dist/esm/server/node/index.js",
      "require": "./dist/cjs/server/node/index.js"
    },
    "./admin": {
      "types": "./dist/types/app-router/admin/index.d.ts",
      "import": "./dist/esm/app-router/admin/index.js",
      "require": "./dist/cjs/app-router/admin/index.js"
    }
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@tern-secure/backend": "workspace:*",
    "@tern-secure/react": "workspace:*",
    "@tern-secure/shared": "workspace:*",
    "@tern-secure/types": "workspace:*",
    "jose": "^5.9.6",
    "server-only": "^0.0.1",
    "tslib": "catalog:repo"
  },
  "peerDependencies": {
    "@upstash/redis": "^1.35.2",
    "firebase": "catalog:peer-firebase",
    "next": "^13.5.7 || ^14.2.25 || ^15.2.3 || ^16",
    "react": "catalog:peer-react",
    "react-dom": "catalog:peer-react"
  },
  "engines": {
    "node": ">=20"
  }
}